@{
    ViewData["Title"] = "Login and Registration";
}
@model logReg.Models.User
@using logReg
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Register</h1>
<form asp-controller="User" asp-action="Register" method="post">
    <label asp-for="first_name"></label>
    <input asp-for="first_name"/>
    <span class='error' asp-validation-for="first_name"></span>
    <label asp-for="last_name"></label>
    <input asp-for="last_name"/>
    <span class='error' asp-validation-for="last_name"></span>
    <label asp-for="email"></label>
    <input asp-for="email"/>
    <span class='error' asp-validation-for="email"></span>
    <label asp-for="password"></label>
    <input asp-for="password"/>
    <span class='error' asp-validation-for="password"></span>
    <label asp-for="confirm"></label>
    <input asp-for="confirm"/>
    <span class='error' asp-validation-for="confirm"></span>
    <br><button type="submit">Register</button>
</form>

<h1>Login</h1>
<form asp-controller="User" asp-action="Login" method="post">
    <label asp-for="email"></label>
    <input asp-for="email"/>
    <label asp-for="password"></label>
    <input asp-for="password"/>
    @if(@ViewBag.error !=null ){
        <span class='error'>@ViewBag.error</span>
    }
    <br><button type="submit">Login</button>
</form>