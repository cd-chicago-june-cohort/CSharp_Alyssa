<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/css/style.css"/>
    <title>Dojodachi</title>
</head>
<body>
    <div id='data'>
        <p>Fullness: @ViewBag.fullness</p>  
        <p>Happiness: @ViewBag.happiness</p>
        <p>Meals: @ViewBag.meals</p>  
        <p>Energy: @ViewBag.energy</p>
    </div>
    <div id='message'>
        <p>@ViewBag.message</p>
    </div>   
    <div id="buttons">
        @if(@ViewBag.restart==null){
            <a href = '/feed'><button>Feed</button></a>
            <a href = '/play'><button>Play</button></a>
            <a href = '/work'><button>Work</button></a>
            <a href = '/sleep'><button>Sleep</button></a>
        }else{
            <a href = '/restart'><button>Restart</button></a>
        }
    </div>
</body>
</html>