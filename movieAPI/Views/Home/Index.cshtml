@{
    ViewData["Title"] = "Movie Lookup";
}
<h1>Movie Lookup:</h1>
<form action="/movie" method='post' id='search'>
    <p>Search for a movie: <input type="text" name='title'></p>
    <input type="submit" value="submit">
</form>
<hr>

<div id='movies'>
    @foreach(var movie in ViewBag.AllMovies){
        <p>@movie["title"] &emsp; Rating: @movie["rating"] &emsp; Released @movie["release_date"]</p>
    }
</div>
